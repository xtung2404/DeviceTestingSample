<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/btn_yellow_20dp"
        android:backgroundTint="@color/dark_blue">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btn_back"
                android:src="@drawable/ic_back"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_firm_ver"
                android:textSize="12sp"
                android:text="1.2.3.4"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_instruction"
            android:text="@string/point_the_control_at_the_ir"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_start"
            android:text="@string/start"
            android:textAllCaps="true"
            android:background="@drawable/btn_yellow_20dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_result"
            android:orientation="vertical"
            android:background="@drawable/btn_yellow_20dp"
            android:backgroundTint="@color/light_gray"
            android:layout_marginTop="16dp"
            android:paddingVertical="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_result"
                android:text="@string/success"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ln_continue"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btn_retry"
                    android:text="@string/retry"
                    android:textAllCaps="true"
                    android:background="@drawable/btn_red_20dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="16dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/btn_continue"
                    android:text="@string/to_continue"
                    android:textAllCaps="true"
                    android:background="@drawable/btn_yellow_20dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_confirm"
            android:text="@string/confirm"
            android:textAllCaps="true"
            android:background="@drawable/btn_yellow_20dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_control"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:visibility="gone">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_off"
                android:text="@string/power_off"
                android:textAllCaps="true"
                android:background="@drawable/btn_red_20dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginEnd="16dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_25"
                android:text="25"
                android:textAllCaps="true"
                android:background="@drawable/btn_yellow_20dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginEnd="16dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_26"
                android:text="26"
                android:textAllCaps="true"
                android:background="@drawable/btn_yellow_20dp"
                android:textSize="12sp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</layout>